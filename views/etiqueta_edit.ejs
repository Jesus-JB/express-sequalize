<%- include('partials/header') %>
<div class="container py-5">
  <div class="card p-4">
    <h1 class="text-center mb-4">Editar Etiqueta</h1>
    <% if (typeof error !== 'undefined') { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } %>
    <form action="/etiquetas/<%= etiqueta._id %>/edit" method="POST">
      <div class="mb-3">
        <label for="texto" class="form-label">Texto</label>
        <input type="text" class="form-control" id="texto" name="texto" value="<%= etiqueta.texto %>" required>
      </div>
      <button type="submit" class="btn btn-primary">Actualizar</button>
      <a href="/etiquetas" class="btn btn-secondary">Volver</a>
    </form>
  </div>
</div>
<%- include('partials/footer') %> 