<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container py-5">
    <div class="card p-4">
      <h1 class="text-center mb-4"><%= title %></h1>
      <form action="/fotos/<%= foto._id %>/edit" method="POST" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="titulo" class="form-label">Título</label>
          <input type="text" class="form-control" id="titulo" name="titulo" value="<%= foto.titulo %>" required>
        </div>
        <div class="mb-3">
          <label for="descripcion" class="form-label">Descripción</label>
          <textarea class="form-control" id="descripcion" name="descripcion" rows="3"><%= foto.descripcion %></textarea>
        </div>
        <div class="mb-3">
          <label for="calificacion" class="form-label">Calificación</label>
          <input type="number" step="0.1" class="form-control" id="calificacion" name="calificacion" value="<%= foto.calificacion %>">
        </div>
        <div class="mb-3">
          <label class="form-label">Imagen actual</label><br>
          <% if (foto.ruta) { %>
            <img src="/<%= foto.ruta %>" alt="Foto" class="img-thumbnail mb-2" style="max-height:100px;">
          <% } else { %>
            <span class="no-tags">Sin imagen</span>
          <% } %>
        </div>
        <div class="mb-3">
          <label for="imagen" class="form-label">Cambiar imagen</label>
          <input type="file" class="form-control" id="imagen" name="imagen" accept="image/*">
        </div>
        <div class="mb-3">
          <label for="etiquetas" class="form-label">Etiquetas</label>
          <select class="form-select" id="etiquetas" name="etiquetas" multiple>
            <% etiquetas.forEach(etiqueta => { %>
              <option value="<%= etiqueta._id %>" <%= foto.etiquetas.map(e=>e._id.toString()).includes(etiqueta._id.toString()) ? 'selected' : '' %>><%= etiqueta.texto %></option>
            <% }) %>
          </select>
        </div>
        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
        <a href="/fotos/findAll/view" class="btn btn-secondary">Cancelar</a>
      </form>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 